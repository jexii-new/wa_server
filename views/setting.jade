extends layout

block content
  div(class="container-fluid")
    if owner.session != undefined && owner.session.length > 0
      if owner.status == 'active'
        h1 Aktif
      if owner.status == 'inactive'
        h1 Off

    if owner.session != undefined && owner.session.length > 0
        form(action='/setting/edit',method='post')
          label(for='username') Pemilik
             input(id='username',type='text', disabled,value='#{owner.nama}',name='username')
          label(for='wa_number') Nomor WA
             input(id='wa_number',type='text', disabled, value='#{owner.nomor}',name='wa_number')
             input(id='wa_number',type='hidden',value='#{owner.id}',name='id')
          label(for='username') Domain
             input(id='username',type='text', disabled,value='#{owner.domain}',name='domain')
          label(for='wa_number') Kunci Api
             input(id='wa_number',type='text', disabled, value='#{owner.api_key}',name='api_key')
          label(for='subscribe') SUBSCRIBE
             input(id='subscribe',type='text',value='#{owner.subscribe}',name='subscribe')  
          label(for='unsubscribe') UNSUBSCRIBE
             input(id='unsubscribe',type='text',value='#{owner.unsubscribe}',name='unsubscribe')
          if owner.status == true 
            label(for='unsubscribe') Status
               input(id='unsubscribe',disabled, type='text',value='#{owner.status == true ? "active" : "inactive"}',name='status')
          if owner.status == false && owner.session != null 
            label(for='unsubscribe') Status
               input(id='unsubscribe',disabled, type='text',value='offline',name='status')
          label(for='unsubscribe') Lisensi
             input(id='unsubscribe',disabled, type='text',value='#{owner.lisensi}',name='lisensi')
          
          button(type="submit", class="btn btn-primary") Simpan Setelan
        a(href="/start" class="btn btn-danger") reset

    if owner.session == null || owner.session == ''
        h1  Barcode 
        img(src="/wa/qr")

    if owner.session == null || owner.session == ''
      script(type="text/javascript").
        setTimeout(() => {
          window.location.reload()
        }, 2000)





